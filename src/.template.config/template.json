{
    "$schema": "http://json.schemastore.org/template",
    "author": "MudBlazor Team",
    "classifications": [
        "MudBlazor", "Blazor", "Linux", "macOS", "Windows", "Windows", "Cloud", "Web"
    ],
    "name": "MudBlazor Templates",
    "description": "Blazor Templates pre configured with MudBlazor.",
    "identity": "MudBlazor.Templates",
    "groupIdentity": "MudBlazor.Templates",
    "shortName": "mudblazor-templates",
    "defaultName": "MudBlazorTemplates",
    "tags": {
        "language": "C#",
        "type": "project"
    },
    "sourceName": "MudBlazor.Template",
    "preferNameDirectory": false,
    "symbols": {
        "Host": {
            "type": "parameter",
            "datatype": "choice",
            "defaultValue": "Wasm",
            "choices": [
                {
                    "choice": "Wasm",
                    "description": "Blazor WebAssembly"
                },
                {
                    "choice": "Server",
                    "description": "Blazor Server-Side"
                }
            ]
        },
        "Template": {
            "type": "parameter",
            "dataType": "choice",
            "description": "MudBlazor Template you want to use as base.",
            "defaultValue": "Default",
            "choices": [
                {
                    "choice": "Default",
                    "description": "Default Blazor Template with MudBlazor."
                },
                {
                    "choice": "AdminDashboard",
                    "description": "Admin Dashboard Template with MudBlazor."
                }
            ]
        },
        "IsWasm": {
            "type": "computed",
            "value": "(Host == 'Wasm')"
          },
        "WasmHosted": {
            "type": "parameter",
            "datatype": "bool",
            "description": "ASP.NET Core Hosted.",
            "defaultValue": "false"
        },
        "WasmPWA": {
            "type": "parameter",
            "datatype": "bool",
            "description": "Progressive Web Application.",
            "defaultValue": "false"
        },
        "skipRestore": {
            "type": "parameter",
            "datatype": "bool",
            "description": "If specified, skips the automatic restore of the project on create.",
            "defaultValue": "false"
        }
    },
    "primaryOutputs": [
        {
            "path": "./"
        }
    ],
    "sources": [
        {
            "condition": "(Template == 'default')",
            "source": "./MudBlazor.Templates/DefaultBlazor",
            "target": "./"
        },
        {
            "source": "./.templates/base",
            "target": "./"
        },
        {
            "condition": "(Type == 'wasm')",
            "source": "./.templates/wasm",
            "target": "./"
        },
        {
            "condition": "(Type == 'server')",
            "source": "./.templates/server",
            "target": "./"
        }
    ],
    "SpecialCustomOperations": {
        "**/*.razor": {
            "operations": [
                {
                    "type": "conditional",
                    "configuration": {
                        "if": [
                            "//#if"
                        ],
                        "else": [
                            "//#else"
                        ],
                        "elseif": [
                            "//#elseif"
                        ],
                        "endif": [
                            "//#endif"
                        ],
                        "trim": true,
                        "wholeLine": true,
                        "evaluator": "C++"
                    }
                }
            ]
        }
    },
    "postActions": [
        {
            "condition": "(!skipRestore)",
            "description": "Restore NuGet packages required by this project.",
            "manualInstructions": [
                {
                    "text": "Run 'dotnet restore'"
                }
            ],
            "actionId": "210D431B-A78B-4D2F-B762-4ED3E3EA9025",
            "continueOnError": true
        }
    ]
}