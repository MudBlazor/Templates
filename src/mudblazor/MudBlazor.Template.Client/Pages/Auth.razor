@page "/auth"

@using Microsoft.AspNetCore.Authorization

@attribute [Authorize]
@*#if (UseServer && !InteractiveAtRoot)
@rendermode InteractiveAuto
##elseif (!InteractiveAtRoot)
@rendermode InteractiveWebAssembly
##endif*@
@*#if (!InteractiveAtRoot) -->

<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />
##endif*@

<PageTitle>Auth</PageTitle>

<MudText Typo="Typo.h3" GutterBottom="true">You are authenticated</MudText>

<AuthorizeView>
    <MudText Class="mb-4">Hello @context.User.Identity?.Name!</MudText>
</AuthorizeView>
